@{
    ViewBag.Title = "Gerenciamento de solicitações de serviço";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div data-ng-controller="AdvertisementManagementController">

    <div class="loading" data-ng-show="pendingRequests > 0"></div>
    <h2>@ViewBag.Title</h2>
    <hr />

    <table class="table" data-ng-show="advertisements && advertisements.length > 0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Data início</th>
                <th>Data término</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <tr data-ng-repeat="advertisement in advertisements">
                <td>{{advertisement.Id}}</td>
                <td>{{advertisement.ServiceSolicitation.StartDate}}</td>
                <td>{{advertisement.ServiceSolicitation.EndDate}}</td>
                <td></td>
            </tr>
        </tbody>
    </table>
    <p data-ng-show="advertisements && advertisements.length == 0">Não há registros a serem exibidos </p>
</div>